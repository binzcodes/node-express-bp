{
  "name": "thin-node-ts-boilerplate",
  "version": "0.0.0",
  "description": "A thin Node Express Typescript boilerplate with Docker",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "files": [
    "dist/src"
  ],
  "license": "Apache-2.0",
  "keywords": [
    "node",
    "typescript",
    "express",
    "jest"
  ],
  "scripts": {
    "start": "node ./dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only ./src/index.ts",
    "test": "npx jest --detectOpenHandles",
    "test:coverage": "echo \"Error: no test specified\" && exit 1",
    "lint": "gts lint",
    "lint:fix": "gts fix",
    "clean": "gts clean",
    "compile": "tsc",
    "prepare": "npm run compile && husky install",
    "pretest": "npm run compile",
    "posttest": "npm run lint"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.4.4",
    "@commitlint/config-conventional": "^17.4.4",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.4.0",
    "@types/node": "^17.0.45",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.57.0",
    "eslint": "^8.37.0",
    "eslint-config-airbnb-base-typescript-prettier": "^5.1.0",
    "eslint-config-airbnb-typescript-prettier": "^5.0.0",
    "gts": "^3.1.1",
    "husky": "^8.0.3",
    "jest": "^29.4.3",
    "prettier": "^2.8.7",
    "supertest": "^6.3.3",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "helmet": "^6.0.1",
    "http-status": "^1.6.2",
    "winston": "^3.8.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint:fix",
      "pre-push": "npm run test"
    }
  }
}
